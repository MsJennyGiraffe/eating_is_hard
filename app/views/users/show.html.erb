<div class="container">
  <div class="well col-md-10 col-md-offset-1">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center"><%= @user.name %><h1>
      </div>

      <div class="col-md-12">
        <div class="col-md-4">
          <%= image_tag @user.image, class: "img-resize img-circle" %>
          <h4><%= @user.email %></h4>
        </div>

        <div class="col-md-4">
          <h3>Favorite Recipes:</h3>
          <div class="favorites">
              <% if @user.favorites %>
                <% @user.favorites.each do |favorite| %>
                <div class="recipe">
                  <%= link_to favorite.saved_recipe.name, favorite.saved_recipe.url %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="col-md-4">

          <div class="col-md-12 button-padding">
            <%= link_to "Add Likes/Dislikes", user_preferences_path(current_user), class: "btn btn-info btn-block button-padding" %>
          </div>

          <h4>Likes:</h4>

          <div class="col-md-12">
            <% @user.likes.each do |like| %>
            <div class="col-md-6">
              <h5><%= like.ingredient.name %></h5>
            </div>
            <% end %>
          </div>

          <h4>Dislikes:</h4>

          <div class="col-md-12">
            <% @user.dislikes.each do |dislike| %>
            <div class="col-md-6">
              <h5><%= dislike.ingredient.name %></h5>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
